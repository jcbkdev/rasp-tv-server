{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
